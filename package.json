{
  "name": "appliance-watch-backend",
  "version": "1.0.0",
  "description": "Express.js backend for Appliance Watch application",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "start:production": "npm run build && npm run db:migrate && npm run start",
    "start:railway": "npm install --legacy-peer-deps && npm run build && npm run db:migrate && npm run start",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "node scripts/migrate.js",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["express", "appliance", "warranty", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.3",
    "zod": "^3.22.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.2",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1"
  }
}